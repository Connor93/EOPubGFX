<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Clean Modern Dark Theme -->
    <!-- Inspired by VS Code / JetBrains dark themes -->
    
    <Styles.Resources>
        <!-- Base Colors -->
        <Color x:Key="BackgroundDark">#1E1E1E</Color>
        <Color x:Key="BackgroundMedium">#252526</Color>
        <Color x:Key="BackgroundLight">#2D2D30</Color>
        <Color x:Key="BackgroundPanel">#333337</Color>
        
        <!-- Border Colors -->
        <Color x:Key="BorderSubtle">#3C3C3C</Color>
        <Color x:Key="BorderMedium">#474747</Color>
        <Color x:Key="BorderFocus">#007ACC</Color>
        
        <!-- Accent Colors -->
        <Color x:Key="AccentPrimary">#007ACC</Color>
        <Color x:Key="AccentHover">#1C97EA</Color>
        <Color x:Key="AccentPressed">#005A9E</Color>
        <Color x:Key="AccentSuccess">#4EC9B0</Color>
        <Color x:Key="AccentWarning">#DCDCAA</Color>
        
        <!-- Text Colors -->
        <Color x:Key="TextPrimary">#CCCCCC</Color>
        <Color x:Key="TextSecondary">#9D9D9D</Color>
        <Color x:Key="TextMuted">#6B6B6B</Color>
        <Color x:Key="TextBright">#FFFFFF</Color>
        
        <!-- Selection Colors -->
        <Color x:Key="SelectionBackground">#264F78</Color>
        <Color x:Key="HoverBackground">#2A2D2E</Color>
        <Color x:Key="RowAlternate">#262628</Color>
        
        <!-- Brushes from Colors -->
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
        <SolidColorBrush x:Key="BackgroundPanelBrush" Color="{StaticResource BackgroundPanel}"/>
        <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}"/>
        <SolidColorBrush x:Key="BorderMediumBrush" Color="{StaticResource BorderMedium}"/>
        <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
        <SolidColorBrush x:Key="AccentSuccessBrush" Color="{StaticResource AccentSuccess}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
        <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionBackground}"/>
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackground}"/>
        <SolidColorBrush x:Key="RowAlternateBrush" Color="{StaticResource RowAlternate}"/>
    </Styles.Resources>
    
    <!-- Window Styling -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundDarkBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Menu Styling -->
    <Style Selector="Menu">
        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
    </Style>
    
    <Style Selector="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- TabControl Styling -->
    <Style Selector="TabControl">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
    
    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style Selector="TabItem:pointerover">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- DataGrid Styling -->
    <Style Selector="DataGrid">
        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
        <Setter Property="RowBackground" Value="{StaticResource BackgroundMediumBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderSubtleBrush}"/>
    </Style>
    
    <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{StaticResource SelectionBackgroundBrush}"/>
    </Style>
    
    <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{StaticResource HoverBackgroundBrush}"/>
    </Style>
    
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <Style Selector="DataGridCell">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <!-- TextBox Styling -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>
    
    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimaryBrush}"/>
    </Style>
    
    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
    </Style>
    
    <!-- ComboBox Styling -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>
    
    <Style Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimaryBrush}"/>
    </Style>
    
    <!-- Button Styling -->
    <Style Selector="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>
    
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{StaticResource BackgroundPanelBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMediumBrush}"/>
    </Style>
    
    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="{StaticResource AccentPrimaryBrush}"/>
    </Style>
    
    <!-- Primary Button Style (for important actions) -->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="{StaticResource AccentPrimaryBrush}"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="Button.Primary:pointerover">
        <Setter Property="Background" Value="#1C97EA"/>
    </Style>
    
    <!-- CheckBox Styling -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- TextBlock defaults -->
    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Section Header Style -->
    <Style Selector="TextBlock.SectionHeader">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,12,0,8"/>
    </Style>
    
    <Style Selector="TextBlock.PanelTitle">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style Selector="TextBlock.Label">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!-- ScrollViewer -->
    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <!-- Editor Panel Style -->
    <Style Selector="Border.EditorPanel">
        <Setter Property="Background" Value="{StaticResource BackgroundMediumBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- GFX Preview Style -->
    <Style Selector="Border.GfxPreview">
        <Setter Property="Background" Value="{StaticResource BackgroundDarkBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
</Styles>
